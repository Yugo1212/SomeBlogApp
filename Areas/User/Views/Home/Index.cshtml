@model IEnumerable<TwitterCopyApp.Models.Post>

<div class="row pb-3 backgroundWhite">

    @foreach (var post in Model)
    {
        <div class="col-8 p-2 container overflow-hidden">
            <div class="card border-primary mb-3">
                <div class="card-header">@post.User.UserName says:</div>
                <div class="card-body">
                    <p class="card-text col-12">@post.Text</p>
                </div>
                <div class="card-footer">
                </div>
            </div>
        </div>
    }

</div>